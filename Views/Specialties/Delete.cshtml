@{
  Layout = "_Layout";
}
@model DoctorOffice.Models.Doctor
<div class="container">
  <div class="jumbotron">
    <h1>Delete a Specialty?</h1>
  </div>
  <h3>Are you sure you want to Delete this @Model.Name?</h3>
  @Html.DisplayFor(model =>model.Name)
  @using (Html.BeginForm())
  {
    <input class="btn btn-outline-dark" type="submit" value="Delete" />
  }