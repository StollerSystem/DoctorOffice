@{
  Layout = "_Layout";
}

@model DoctorOffice.Models.Patient;
<div class="Container">
  <div class="jumbotron">
    <h1>Add a Doctor</h1>
  </div>


  <h4>Add a Doctor to this Patient: @Html.DisplayFor(model => model.Name)</h4>

  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.PatientId)

      @Html.Label("Select Doctor")
      @Html.DropDownList("DoctorId")

      <input type="submit" value="Save" />
  }

  <p>@Html.ActionLink("Back to Patient", "details", new {id = Model.PatientId})</p>

</div>


