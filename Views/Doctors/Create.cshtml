@{
  Layout = "_Layout";
}
@model DoctorOffice.Models.Doctor
<div class="container">
  <div class="jumbotron">
    <h1>Add a new Doctor</h1>
  </div>
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {required = "required"})
    <input type="submit" value="Add new Doctor" class="btn btn-outline-dark" />
  }
</div>